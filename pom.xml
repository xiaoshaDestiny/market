                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rbxu.cola.market</groupId>
                <artifactId>market-component-common</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rbxu.cola.market</groupId>
