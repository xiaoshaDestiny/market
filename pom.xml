<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.rbxu.cola.market</groupId>
    <artifactId>market-parent</artifactId>
    <version>${project.version}</version>
    <packaging>pom</packaging>
    <name>market</name>

    <properties>
        <project.version>2024-03-05-DEV</project.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.deploy.skip>true</maven.deploy.skip>

        <!--架构依赖-->
        <cola.components.version>4.3.2</cola.components.version>
        <spring-boot.version>2.7.2</spring-boot.version>
        <mybatis-starter.version>2.2.2</mybatis-starter.version>

        <!--服务工具包依赖-->
        <okhttp.version>2.7.5</okhttp.version>
        <guava.version>30.1-jre</guava.version>
        <apache.commons.collections.version>3.2.2</apache.commons.collections.version>
        <apache.commons.lang3.version>3.8.1</apache.commons.lang3.version>
        <apache.commons.text.version>1.6</apache.commons.text.version>
        <apache.commons.io.version>2.6</apache.commons.io.version>
        <apache.commons.beanutils.version>1.9.3</apache.commons.beanutils.version>
        <apache.commons.codec.version>1.11</apache.commons.codec.version>
        <apache.commons.math3.version>3.6.1</apache.commons.math3.version>
        <apache.commons.compress.version>1.18</apache.commons.compress.version>
        <apache.commons.fileupload.version>1.4</apache.commons.fileupload.version>
        <apache.commons.httpclient.version>3.1</apache.commons.httpclient.version>
        <apache.commons.validator.version>1.6</apache.commons.validator.version>
        <apache.commons.email.version>1.5</apache.commons.email.version>
        <apache.commons.exec.version>1.3</apache.commons.exec.version>
        <apache.poi.ooxml.version>4.0.1</apache.poi.ooxml.version>
        <apache.commons.configuration.version>1.10</apache.commons.configuration.version>
    </properties>

    <modules>
        <module>market-adapter</module>
        <module>market-application</module>
        <module>market-component</module>
        <module>market-component/market-component-client</module>
        <module>market-component/market-component-common</module>
        <module>market-domain</module>
        <module>market-domain/market-domain-core</module>
        <module>market-domain/market-domain-adapter</module>
        <module>market-infrastructure</module>
        <module>market-facade</module>
        <module>start</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.rbxu.cola.market</groupId>
                <artifactId>market-adapter</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rbxu.cola.market</groupId>
